// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum PropertyType {
  STRING
  BOOLEAN
  NUMBER
  LIST
}

model StateValidator {
  id           Int            @id @default(autoincrement())
  validatorClz String
  handlers     StateHandler[]
}

model StateHandler {
  id          Int            @id @default(autoincrement())
  name        String
  handlerClz  String
  actions     StateAction[]
  validator   StateValidator @relation(fields: [validatorId], references: [id])
  validatorId Int
}

model StateAction {
  id           Int           @id @default(autoincrement())
  name         String
  actionType   String
  property     String
  propertyType PropertyType
  handler      StateHandler? @relation(fields: [handlerId], references: [id])
  handlerId    Int?
  reducer      StateReducer? @relation(fields: [reducerId], references: [id])
  reducerId    Int?
}

model StateReducer {
  id         Int           @id @default(autoincrement())
  name       String
  actions    StateAction[]
  registry   StateRegistry @relation(fields: [registryId], references: [id])
  registryId Int
}

model StateSchema {
  id               Int           @id @default(autoincrement())
  schemaFactoryClz String
  registry         StateRegistry @relation(fields: [registryId], references: [id])
  registryId       Int
}

model StateRegistry {
  id      Int           @id @default(autoincrement())
  name    String
  reducer StateReducer?
  schema  StateSchema?
}
